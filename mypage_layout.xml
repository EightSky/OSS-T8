<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/previousPage_ImageButton_Mp"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abc_vector_test"
            tools:srcCompat="?attr/homeAsUpIndicator" />

        <Space
            android:layout_width="86dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="My Page"
            android:textSize="30sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="31dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="155dp" />

    <TextView
        android:id="@+id/name_Label_M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="홍길동"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/email_Label_M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="홍길동@naver.com"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="99dp" />

    <Button
        android:id="@+id/myPost_Button_M"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#12CCBA"
        android:text="내 게시글"
        android:textSize="30sp" />

    <Button
        android:id="@+id/profileSetting_Button_M"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#12CCBA"
        android:text="프로필 설정"
        android:textSize="30sp" />

</LinearLayout>