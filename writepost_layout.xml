<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="314dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/complete_Button_W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/changeImage_Button_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 선택" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView1_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/border" />

                    <ImageView
                        android:id="@+id/imageView2_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/border" />

                    <ImageView
                        android:id="@+id/imageView3_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/border" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView4_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/border" />

                    <ImageView
                        android:id="@+id/imageView5_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/border" />

                    <ImageView
                        android:id="@+id/imageView6_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/border" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView7_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/border" />

                    <ImageView
                        android:id="@+id/imageView8_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/border" />

                    <ImageView
                        android:id="@+id/imageView9_W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/border" />
                </TableRow>

            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/writeTitle_TextField_W"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="제목"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="27dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tag_Label_W"
                    android:layout_width="87dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text=" 태그"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/tag_Spinner_W"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_Label_W"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text=" 가격"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/price_TextFiled_W"
                    android:layout_width="321dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberPassword" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₩"
                    android:textSize="26sp" />

            </LinearLayout>

            <Spinner
                android:id="@+id/price_Spinner_W"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/contents_TextField_W"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="내용"
                android:inputType="textMultiLine" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>