<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="86dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="135dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="33dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_Label_Ps"
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ㆍ아이디"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/id_textView_Ps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25sp" />

                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/password_Label_Ps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:text="ㆍ비밀번호"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/password_TextField_Ps"
                            android:layout_width="276dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPassword" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/check_Password_Label_Ps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ㆍ비밀번호 확인"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/check_Password_TextField_Ps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPassword" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/name_Label_Ps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:text="ㆍ이름"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/name_TextField_Ps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/gender_Label_Ps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:text="ㆍ성별"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/gender_textView_Ps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp" />

                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email_Label_Ps"
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ㆍ이메일"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/email_TextField_Ps"
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phoneNumber_Label_Ps"
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ㆍ전화번호"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/phoneNumber_TextField_Ps"
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="phone" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="36dp" />

            <Button
                android:id="@+id/complete_Button_Ps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#0BCFBD"
                android:text="완료"
                android:textSize="24.7sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>